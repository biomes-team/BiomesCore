<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Add terrain tags to control spawning of BMT plants -->
	<!-- tags are:
	Boggy
	ChestDeep
	Deep
	Fresh
	Icy
	Loose
	Muddy
	Rocky
	Salty
	Sandy
	Shallow
	Soil
	Water

	Hot
	Lava
	
	Toxic

	Slimy
	Metallic
	Eyey
	Tarry
	-->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/VFECore.ActiveTerrainDef[defName="RG_HotSpring"]</xpath>
		<value>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Water</li>
					<li>Shallow</li>
					<li>Hot</li>
				</terrainTags>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/VFECore.ActiveTerrainDef[defName="RG_HotSpringDeep"]</xpath>
		<value>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Water</li>
					<li>Deep</li>
					<li>Hot</li>
				</terrainTags>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/VFECore.ActiveTerrainDef[defName="RG_Lava"]</xpath>
		<value>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Lava</li>
				</terrainTags>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="RG_LavaRock"]</xpath>
		<value>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Rocky</li>
					<li>Lava</li>
				</terrainTags>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TerrainDef[defName="RG_HotSpringSand"]</xpath>
		<value>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Sandy</li>
					<li>Loose</li>
					<li>Hot</li>
				</terrainTags>
			</li>
		</value>
	</Operation>

</Patch>